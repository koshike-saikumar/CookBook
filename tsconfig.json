{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",

    /* ðŸ‘‡ Key fixes */
    "module": "ESNext",
    "moduleResolution": "bundler",   // âœ… use bundler instead of Node (fixes @vitejs/plugin-react, MUI, etc.)

    /* TypeScript checks */
    "strict": true,
    "noImplicitAny": false,          // (optional: avoid implicit any errors)
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],                // âœ… ensures only src folder is compiled
  "exclude": ["node_modules", "dist"]
}
